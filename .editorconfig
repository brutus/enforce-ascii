# http://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 88
quote_type = double
indent_style = tab
indent_size = 4

[*.{yaml,yml,json}]
quote_type = double
indent_style = space
indent_size = 2

[*.toml]
quote_type = double
indent_style = tab
indent_size = 2

[*.{rst,md,markdown}]
indent_style = tab
indent_size = 4

[*.py]
quote_type = double
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab
indent_size = 4
